{%
  set footer_classes = [
    'footer_wrapper',
    footer_fixed ? 'fixed'
  ]
%}

{% if footer_fixed %}
<section id="last-section" class="last-section"></section>
{% endif %}

<!-- Start: Footer -->
<footer id="footer" {{ create_attribute().addClass(footer_classes) }}>
  <div id="footer_shader" class="footer">
    <div class="container">
      {% if page.footer_top %}
        <section class="footer-top">
          {{ page.footer_top }}
        </section>
      {% endif %}<!-- /footer-top -->
      {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
       <section class="footer-blocks">
        {% if page.footer_first %}
          <div class="footer-block">
            {{ page.footer_first }}
          </div>
        {% endif %}<!--/footer-first -->
        {% if page.footer_second %}
          <div class="footer-block">
            {{ page.footer_second }}
          </div>
        {% endif %}<!--/footer-second -->
        {% if page.footer_third %}
          <div class="footer-block">
            {{ page.footer_third }}
          </div>
        {% endif %}<!--/footer-third -->
        {% if page.footer_fourth %}
          <div class="footer-block">
            {{ page.footer_fourth }}
          </div>
        {% endif %}<!--/footer-fourth -->
       </section> <!--/footer-blocks -->
     {% endif %} {# end if for footer one, two, three, four blocks #}
     {% if copyright_text or show_footer_icon %}
      <section class="footer-bottom-middle">
        {% if copyright_text %}
          <div class="copyright">
            &copy; {{ "now"|date("Y") }} {{ site_name }}, All rights reserved.
          </div>
        {% endif %} <!-- end if for copyright -->
        {% if show_footer_icon %}
          <div class="footer-bottom-middle-right">
            {% include '@kym/template-parts/social-icons.html.twig' %}
          </div>
        {% endif %} <!-- end if for show_footer_icon -->
      </section><!-- /footer-bottom-middle -->
     {% endif %} <!-- end condition if copyright or social icons -->
     {% if page.footer_bottom %}
       <div class="footer-bottom">
         {{ page.footer_bottom }}
       </div> <!--/.footer-bottom -->
     {% endif %} <!-- end condition for footer_bottom -->
    </div><!-- /.container -->
  </div> <!--/.footer -->
</footer>
<!-- End: Footer -->

{% if scrolltotop_on %}
<div class="scrolltop"><i class="icon-arrow-up" aria-hidden="true"></i></div>
{% endif %}
{% if fontawesome_four %}
  {{ attach_library('kym/fontawesome4') }}
{% endif %}
{% if fontawesome_five %}
  {{ attach_library('kym/fontawesome5') }}
{% endif %}
{% if fontawesome_six %}
  {{ attach_library('kym/fontawesome6') }}
{% endif %}
{% if bootstrapicons %}
  {{ attach_library('kym/bootstrap-icons') }}
{% endif %}
