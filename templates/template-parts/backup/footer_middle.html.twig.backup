{%
  set add_class = [
    'footer-middle',
    page.footer_first and page.footer_second and page.footer_third and page.footer_fourth ? 'grid4-auto',
    page.footer_first and page.footer_second and page.footer_third and !page.footer_fourth ? 'grid3-auto',
    page.footer_first and page.footer_second and !page.footer_third and page.footer_fourth ? 'grid3-auto',
    page.footer_first and !page.footer_second and page.footer_third and page.footer_fourth ? 'grid3-auto',
    !page.footer_first and page.footer_second and page.footer_third and page.footer_fourth ? 'grid3-auto',
    page.footer_first and page.footer_second and !page.footer_third and !page.footer_fourth ? 'grid2-auto',
    page.footer_first and !page.footer_second and page.footer_third and !page.footer_fourth ? 'grid2-auto',
    !page.footer_first and page.footer_second and page.footer_third and !page.footer_fourth ? 'grid2-auto',
    page.footer_first and !page.footer_second and !page.footer_third and page.footer_fourth ? 'grid2-auto',
    !page.footer_first and page.footer_second and !page.footer_third and page.footer_fourth ? 'grid2-auto',
    !page.footer_first and !page.footer_second and page.footer_third and page.footer_fourth ? 'grid2-auto',
    'grid'
  ]
%}
<div{{ create_attribute().addClass(add_class) }}>
  {% if page.footer_first %}
    <div class="footer-middle-first footer-middle-block m-0 p-0">
      {{ page.footer_first }}
    </div>
  {% endif %} {# end condition for footer_first #}

  {% if page.footer_second %}
    <div class="footer-middle-second footer-middle-block m-0 p-0">
      {{ page.footer_second }}
    </div>
  {% endif %} {# end condition for footer_second #}

  {% if page.footer_third %}
    <div class="footer-middle-second footer-middle-block m-0 p-0">
      {{ page.footer_third }}
    </div>
  {% endif %} {# end condition for footer_third #}

  {% if page.footer_fourth or show_footer_icon %}
    <div class="footer-middle-second footer-middle-block m-0 p-0">
      {% if page.footer_fourth %}
        {{ page.footer_fourth }}
      {% endif %}

      {% if show_footer_icon %}
        <div class="footer-social-media">
          {% include '@kym/template-parts/social-icons.html.twig' %}
        </div>
      {% endif %} <!-- end condition for show_footer_icon -->
    </div>
  {% endif %} {# end condition for footer_fourth or show_footer_icon #}
</div>
