{%
  set add_class = [
    'header-top-block',
    'header-top-right'
    'text-end',
    'm-0',
    'my-auto',
    'ps-0',
    page.language_dropdown ? 'col-3' : 'col-5'
  ]
%}
<div class="header-top">
  <div class="container">
    <div class="header-top-container min-vh-5">
    {% if page.header_top|render|striptags %}
      <div class="header-top-block header-top-left align-middle my-auto col-5">
        {{ page.header_top }}
      </div> <!--/.header-top-left -->
    {% endif %}

      {% if page.language_dropdown|render|striptags %}
        <div class="header-top-block header-top-center content-right m-0 my-auto col-2">
          {{ page.language_dropdown }}
        </div>
      {% endif %}

      {% if show_header_icon %}
        <div{{ create_attribute().addClass(add_class) }}>
          {% if show_header_icon %}
            {% include '@kym/template-parts/social-icons.html.twig' %}
          {% endif %}
        </div> <!--/.header-top-right -->
      {% endif %}
    </div> <!--/.header-top-container -->
  </div> <!--/.container -->
</div> <!--/.header-top -->
